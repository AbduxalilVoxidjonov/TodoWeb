@model IEnumerable<TodoWeb.Models.Todo>

@{
    ViewData["Title"] = "My Todos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>📝 My Todo List</h2>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    ➕ Add New Todo
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center p-5">
                    <h4>No todos yet! 🎉</h4>
                    <p class="lead">Click "Add New Todo" to get started.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var todo in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card @(todo.IsCompleted ? "border-success" : "border-primary") h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title @(todo.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                            @todo.Title
                                        </h5>
                                        @if (todo.IsCompleted)
                                        {
                                            <span class="badge bg-success">✓ Done</span>
                                        }
                                    </div>

                                    @if (!string.IsNullOrEmpty(todo.Description))
                                    {
                                        <p class="card-text @(todo.IsCompleted ? "text-muted" : "")">
                                            @todo.Description
                                        </p>
                                    }

                                    <div class="mt-3">
                                        <small class="text-muted">
                                            📅 Created: @todo.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                                        </small>
                                        @if (todo.IsCompleted && todo.CompletedDate.HasValue)
                                        {
                                            <br />
                                            <small class="text-success">
                                                ✓ Completed: @todo.CompletedDate.Value.ToString("MMM dd, yyyy HH:mm")
                                            </small>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex gap-2">
                                        <form asp-action="Complete" asp-route-id="@todo.Id" method="post" class="flex-grow-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm w-100 @(todo.IsCompleted ? "btn-warning" : "btn-success")">
                                                @(todo.IsCompleted ? "↩️ Undo" : "✓ Complete")
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-route-id="@todo.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                🗑️ Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>