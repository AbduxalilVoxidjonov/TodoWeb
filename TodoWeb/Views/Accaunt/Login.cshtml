@model TodoWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TodoWeb</title>
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <div class="container">
        <div class="auth-card">
            <div class="illustration">
                <img src="~/images/login-illustration.svg" alt="Login Illustration">
            </div>

            <div class="form-container">
                <h2>Sign In</h2>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <span class="icon">👤</span>
                        <input asp-for="Username" class="form-control" placeholder="Enter Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <span class="icon">🔒</span>
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                    </div>

                    <button type="submit" class="btn-submit">Login</button>

                    <p class="switch-text">
                        Don't have an account? <a asp-action="Register">Create One</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>