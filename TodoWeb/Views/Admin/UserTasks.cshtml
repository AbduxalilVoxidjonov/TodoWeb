@model IEnumerable<TodoWeb.Models.Todo>

@{
    ViewData["Title"] = "User Tasks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2><i class="bi bi-person-badge"></i> @ViewBag.UserName ning vazifalari</h2>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm shadow-sm">
            <i class="bi bi-arrow-left"></i> Admin Panelga qaytish
        </a>
    </div>
    <hr />

    <div class="card mb-4 shadow-sm border-primary">
        <div class="card-body bg-light">
            <h5 class="card-title text-primary">Yangi vazifa biriktirish</h5>
            <form asp-action="AddTaskForUser" method="post" class="row g-3">
                <input type="hidden" name="userId" value="@ViewContext.RouteData.Values["id"]" />
                <div class="col-md-9">
                    <input type="text" name="title" class="form-control" placeholder="Vazifa matnini kiriting..." required />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-plus-lg"></i> Qo'shish
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover border align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 40%">Vazifa nomi</th>
                    <th style="width: 25%">Holati (O'zgartirish)</th>
                    <th style="width: 20%">Yaratilgan vaqti</th>
                    <th style="width: 15%" class="text-center">Amallar</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-5">
                            <i class="bi bi-clipboard-x fs-1 d-block mb-2"></i>
                            Hozircha vazifalar yo'q.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var task in Model)
                    {
                        <tr>
                            <td class="@(task.IsCompleted ? "text-decoration-line-through text-muted" : "fw-bold")">
                                @task.Title
                            </td>
                            <td>
                                <form asp-action="UpdateTaskStatus" method="post" id="statusForm_@task.Id">
                                    <input type="hidden" name="taskId" value="@task.Id" />
                                    <input type="hidden" name="userId" value="@task.UserId" />

                                    <select name="isCompleted"
                                            class="form-select form-select-sm @(task.IsCompleted ? "text-success border-success" : "text-warning border-warning")"
                                            onchange="document.getElementById('statusForm_@task.Id').submit();">

                                        @if (task.IsCompleted)
                                        {
                                            <option value="true" selected>✅ Bajarilgan</option>
                                            <option value="false">⏳ Aktiv (Jarayonda)</option>
                                        }
                                        else
                                        {
                                            <option value="false" selected>⏳ Aktiv (Jarayonda)</option>
                                            <option value="true">✅ Bajarilgan</option>
                                        }
                                    </select>
                                </form>
                            </td>
                            <td class="small text-muted">
                                @task.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td class="text-center">
                                <form asp-action="DeleteTask" method="post" onsubmit="return confirm('Haqiqatdan ham ushbu vazifani o\'chirmoqchimisiz?');">
                                    <input type="hidden" name="taskId" value="@task.Id" />
                                    <input type="hidden" name="userId" value="@task.UserId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> O'chirish
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>